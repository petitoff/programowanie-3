<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">

    <DockPanel>
        <Button DockPanel.Dock="Bottom" Height="50">Bottom</Button>
        <Button DockPanel.Dock="Left" Width="50">Left</Button>
        <Button DockPanel.Dock="Right" Width="50">Right</Button>

        <Button Background="Red" DockPanel.Dock="Top" Height="50">Top</Button>
        <Button Background="Green" DockPanel.Dock="Top" Height="100" Width="80">Top2</Button>

        <Button DockPanel.Dock="Right" Height="50" Width="50">Right2</Button>
        <Button DockPanel.Dock="Right" Height="50" Width="50">Right3</Button>
        <Button Background="Blue" DockPanel.Dock="Top" Height="30" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom">Top3</Button>

        <Button Height="60" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom">Fill</Button>
    </DockPanel>
</Window>
